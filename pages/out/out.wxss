  width:400rpx;
  height:400rpx;
}

.time {
  display:flex;
  align-items: center;
  text-align: center;
  justify-content: center;
  margin-top: 20rpx;
  font-family: 等线;
  font-weight: bold;
}

.bottom {
    display:flex;
    margin-left: 50rpx;
    margin-top: 25rpx;
  }

  .top {
    display:flex;
    margin-left: 50rpx;
    margin-bottom: 25rpx;
  }

  .l-to-r {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

  .text_left {
    margin-left: 50rpx;
    vertical-align: middle;
    font-family: 等线;
