    margin-right: 50rpx;
  }

  .label_text_leave{
    display: block;
    margin-left: 50rpx;
    margin-top: 10rpx;
    font-size: 10px;
    font-weight:lighter;
    border-style:solid;
    border-color:gainsboro;
    border-width:thin;
  }

  .label_text3_left{
    margin-left: 15rpx;
  }
  .label_text3_right{
    font-size: 10px;
  }

  .sign{
    display: block;
    margin-left: 50rpx;
